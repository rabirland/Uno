@namespace Uno.Client.Shared

<div class="container">
    <div class="icon">
        @Icon
    </div>
    <div class="name">
        @PlayerName
    </div>
    <div class="cards">
        @for (int i = 0; i < CardCount; i++)
        {
            <div class="card-wrapper">
                <UnoCard IsBackFace="true"/>
            </div>
        }
    </div>
</div>

@code {
    private MarkupString Icon => new MarkupString(Emoji.GetPlayerEmoji(PlayerName));

    [Parameter]
    public string PlayerName { get; set; } = string.Empty;

    [Parameter]
    public int CardCount { get; set; } = 0;
}
