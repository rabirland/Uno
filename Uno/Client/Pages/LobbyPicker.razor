@page "/pick-lobby"
@using Uno.Shared

@inject Api api

Pick lobby

<div>
    <span>Player name:</span>
    <input @bind-value="playerName"/>
</div>

<div>
    Create new lobby:
    <input @bind-value="newLobbyName"/>
    <button @onclick="OnClickCreateLobby">Create</button>
</div>

<div>
    Join lobby:
    <input @bind-value="joinLobbyName"/>
    <button @onclick="OnClickJoinLobby">Join</button>
</div>

<div>
    Token: @token
</div>

@code {
    private string playerName = string.Empty;
    private string newLobbyName = string.Empty;
    private string joinLobbyName = string.Empty;

    private string token = string.Empty;

    private async Task OnClickCreateLobby()
    {
        var result = await this.api.Lobby.CreateLobbyAsync(new CreateLobbyRequest { LobbyName = newLobbyName, PlayerName = playerName });

        if (result.IsSuccessful)
        {
            this.token = result.token;
            this.StateHasChanged();
        }
    }

    private async Task OnClickJoinLobby()
    {
        var result = await this.api.Lobby.JoinLobbyAsync(new JoinLobbyRequest(playerName, joinLobbyName));

        if (result.IsSuccessful)
        {
            this.token = result.Token;
            this.StateHasChanged();
        }
    }
}