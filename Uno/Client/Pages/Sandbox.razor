@page "/sandbox"
@using Uno.Shared

<div style="width: 100%; height: 40vh">
    <BlazorSciFi.FillLayout>
        Wololo
    </BlazorSciFi.FillLayout>
</div>

<div style="width: 10vmin; height: 10vmin">
    <BlazorSciFi.RingLayout CenterRadiusPercentage="10" Arc="270" Offset="60">
        <BlazorSciFi.RingItem>
            <div style="border: 1px solid black">Item 1</div>
        </BlazorSciFi.RingItem>

        <BlazorSciFi.RingItem>
            <div style="border: 1px solid black">Item 2</div>
        </BlazorSciFi.RingItem>

        <BlazorSciFi.RingItem>
            <div style="border: 1px solid black">Item 3</div>
        </BlazorSciFi.RingItem>

        <BlazorSciFi.RingItem>
            <div style="border: 1px solid black">Item 4</div>
        </BlazorSciFi.RingItem>

        <BlazorSciFi.RingItem>
            <div style="border: 1px solid black">Item 5</div>
        </BlazorSciFi.RingItem>

        <BlazorSciFi.RingItem>
            <div style="border: 1px solid black">Item 6</div>
        </BlazorSciFi.RingItem>
    </BlazorSciFi.RingLayout>
</div>

<div style="overflow: auto; word-wrap: unset; white-space: nowrap; font-size:50px;">
    <UnoCard IsBackFace="true" />
    <UnoCard IsBackFace="true" />
    <UnoCard IsBackFace="true" />
    <UnoCard IsBackFace="true" />
</div>

<div style="overflow: auto; word-wrap: unset; white-space: nowrap; font-size: 50px;">
    @foreach (var type in Enum.GetValues<GameMessages.CardType>())
    {
        <UnoCard Type="type" Color="GameMessages.CardColor.Yellow" IsBackFace="false"/>
    }
</div>

<div style="overflow: auto; word-wrap: unset; white-space: nowrap; font-size: 90px;">
